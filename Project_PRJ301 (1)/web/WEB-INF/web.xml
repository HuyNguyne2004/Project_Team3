<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.authen.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardUserServlet</servlet-name>
        <servlet-class>controller.user.DashboardUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminEnrollments</servlet-name>
        <servlet-class>controller.admin.AdminEnrollments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCourse</servlet-name>
        <servlet-class>controller.admin.AdminCourse</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <!-- Thư mục tạm để lưu file -->
            <max-file-size>5242880</max-file-size>
            <!-- 5MB -->
            <max-request-size>20971520</max-request-size>
            <!-- 20MB -->
            <file-size-threshold>1048576</file-size-threshold>
            <!-- 1MB -->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>AdminUser</servlet-name>
        <servlet-class>controller.admin.AdminUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dashboard_room</servlet-name>
        <servlet-class>dashboard_room</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminRoom</servlet-name>
        <servlet-class>controller.admin.AdminRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCourse</servlet-name>
        <servlet-class>controller.user.RegisterCourse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserCourse</servlet-name>
        <servlet-class>controller.user.UserCourse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSettings</servlet-name>
        <servlet-class>controller.user.UserSettings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/authen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardUserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminEnrollments</servlet-name>
        <url-pattern>/admin/enrollments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminCourse</servlet-name>
        <url-pattern>/admin/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUser</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminRoom</servlet-name>
        <url-pattern>/admin/room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCourse</servlet-name>
        <url-pattern>/user/registerCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserCourse</servlet-name>
        <url-pattern>/user/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSettings</servlet-name>
        <url-pattern>/user/settings</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
